---
import PageLayout from "@/layouts/PageLayout.astro";
import ContainerSection from "@/components/common/ContainerSection.astro";
import TaskRoot from "@/components/portfolio/task-manager";
import HeaderPortfolio from "@/components/portfolio/common/header-portfolio";
import { pagesSeo } from "@/config/pages";

const meta = pagesSeo["task-manager"];
---

<PageLayout meta={meta}>
  <ContainerSection maxWidth="max-w-2xl">
    <HeaderPortfolio
      client:visible
      title={"Task Manager"}
      description={"Task management tool that simplifies daily organization and enhances productivity."}
      chipsList={["React", "Typescript", "react-redux", "@reduxjs/toolkit", "Context API"]}
    />
    <TaskRoot client:visible />
  </ContainerSection>
</PageLayout>
