---
import PageLayout from "@/layouts/PageLayout.astro";
import ContainerSection from "@/components/ContainerSection.astro";
import TaskRoot from "@/components/portfolio/task-manager";
import HeaderPortfolio from "@/components/HeaderPortfolio.astro";
---

<PageLayout meta={{ title: "Task Manager" }}>
	<ContainerSection maxWidth="max-w-2xl">
		<HeaderPortfolio
			title={"Task Manager"}
			description={"Task management tool that simplifies daily organization and enhances productivity."}
