---
import type { GetStaticPaths, InferGetStaticPropsType } from "astro";
import { getBlogStaticPaths } from "@/utils/page-helpers";
import StreamListPage from "@/components/blog/StreamListPage.astro";

export const getStaticPaths: GetStaticPaths = (opts) => getBlogStaticPaths({ ...opts, lang: "pl" });

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { page } = Astro.props;
---

<StreamListPage page={page} />
