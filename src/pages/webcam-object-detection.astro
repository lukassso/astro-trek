---
import PageLayout from "@/layouts/PageLayout.astro";
import ContainerSection from "@/components/common/ContainerSection.astro";
import WebcamObjectDetectionComponent from "@/components/portfolio/webcam-object-detection";
import HeaderPortfolio from "@/components/portfolio/common/header-portfolio";
import { pagesSeo } from "@/config/pages";

const meta = pagesSeo["webcam-object-detection"];
---

<PageLayout meta={meta}>
  <ContainerSection maxWidth="max-w-2xl">
    <HeaderPortfolio
      client:visible
      title={"Webcam Object Detection"}
      description={"A real-time image object detection application using your webcam. This project leverages the power of TensorFlow.js to detect and identify objects in your webcam feed."}
      chipsList={["Typescript", "react-webcam", "Coco-ssd model", "Tensorflow.js"]}
    />
    <WebcamObjectDetectionComponent client:visible />
  </ContainerSection>
</PageLayout>
