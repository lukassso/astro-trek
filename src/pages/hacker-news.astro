---
import PageLayout from "@/layouts/PageLayout.astro";
import ContainerSection from "@/components/common/ContainerSection.astro";
import HackerNewsRoot from "@/components/portfolio/hacker-news";
import HeaderPortfolio from "@/components/portfolio/common/header-portfolio";
---

<PageLayout meta={{ title: "Hacker News" }}>
  <ContainerSection maxWidth="max-w-2xl">
    <HeaderPortfolio
      client:visible
      title={"Hacker News"}
      description={"A minimalist Hacker News client that facilitates access to technological news."}
      chipsList={["React", "Typescript", "Tailwind CSS", "Rest API", "Context API", "useReducer"]}
    />
    <HackerNewsRoot client:visible />
  </ContainerSection>
</PageLayout>
