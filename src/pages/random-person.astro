---
import PageLayout from "@/layouts/PageLayout.astro";
import ContainerSection from "@/components/ContainerSection.astro";
import RandomPersonComponent from "../components/portfolio/random-person";
import HeaderPortfolio from "@/components/HeaderPortfolio.astro";
---

<PageLayout meta={{ title: "Random Person" }}>
	<ContainerSection maxWidth="max-w-2xl">
		<HeaderPortfolio
			title={"Random Person"}
			description={"A random profile generator for testing purposes, complete with contact details and a photograph."}
			chipsList={["React", "Typescript", "react-icons", "Rest API", "Tailwind CSS"]}
		/>
		<RandomPersonComponent client:visible />
	</ContainerSection>
</PageLayout>
