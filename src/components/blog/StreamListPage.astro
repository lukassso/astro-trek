---
import type { Page } from "astro";
import type { PostWithUrl } from "@/utils/page-helpers";
import type { Language } from "@/types";
import { getCollection, type CollectionEntry } from "astro:content";
import { useTranslations } from "@/i18n/utils";
import { pagesSeo } from "@/config/pages";
import PageLayout from "@/layouts/PageLayout.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import NoteCard from "@/components/blog/NoteCard.astro";
import Pagination from "@/components/common/Paginator.astro";

export interface Props {
  page: Page<PostWithUrl>;
}

const { page } = Astro.props;

const lang = Astro.currentLocale as Language["lang"];
const t = useTranslations(lang);

const meta = lang === "pl" ? pagesSeo["blog-pl"] || pagesSeo["blog"] : pagesSeo["blog"];

const paginationProps = {
  ...(page.url.prev && { prevUrl: { text: t("pagination.prev"), url: page.url.prev } }),
  ...(page.url.next && { nextUrl: { text: t("pagination.next"), url: page.url.next } }),
};

const dateLocale = lang === "pl" ? "pl-PL" : "en-GB";

// Fetch notes from content collection (using folder-based language like posts)
const allNotes = await getCollection("note", (entry: CollectionEntry<"note">) => {
  const languageMatch = lang ? entry.id.startsWith(`${lang}/`) : true;
  const draftStatusMatch = import.meta.env.PROD ? entry.data.draft !== true : true;
  return languageMatch && draftStatusMatch;
});

// Create unified feed items with type discriminator
type FeedItem =
  | { type: "post"; data: PostWithUrl; publishDate: Date }
  | { type: "note"; data: CollectionEntry<"note">; publishDate: Date };

const feedItems: FeedItem[] = [
  ...page.data.map((post) => ({
    type: "post" as const,
    data: post,
    publishDate: post.data.publishDate,
  })),
  ...allNotes.map((note) => ({
    type: "note" as const,
    data: note,
    publishDate: note.data.publishDate,
  })),
];

// Sort all items by date (newest first)
const sortedFeed = feedItems.sort((a, b) => b.publishDate.valueOf() - a.publishDate.valueOf());
---

<PageLayout meta={meta}>
  <div class="mx-auto max-w-6xl px-4 py-24 text-default md:px-6 md:py-32 lg:py-40">
    <h1 class="mb-6 text-3xl font-bold">Stream</h1>
    <section aria-label="Blog post list" class="mb-24">
      <div class="space-y-8 text-start">
        {
          sortedFeed.map((item) => (
            <>
              {item.type === "note" ? (
                <NoteCard note={item.data} />
              ) : (
                <PostPreview
                  title={item.data.data.title}
                  img={item.data.data.coverImage?.src}
                  desc={item.data.data.description}
                  target="_self"
                  alt={item.data.data.coverImage?.alt}
                  url={item.data.url}
                  publishDate={item.data.data.publishDate.toLocaleDateString(dateLocale, {
                    dateStyle: "long",
                  })}
                  tags={item.data.data.tags}
                  draft={item.data.data.draft}
                />
              )}
              <div class="border border-y border-brcolor" />
            </>
          ))
        }
      </div>
      <Pagination {...paginationProps} />
    </section>
  </div>
</PageLayout>
